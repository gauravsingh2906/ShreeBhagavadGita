<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2.60dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="6.50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="6.50dp"
            android:background="@drawable/chapter_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="26.00dp"
                    android:layout_height="26.00dp"
                    android:background="@drawable/bg_shimmer"
                    android:src="@drawable/baseline_edit_note_24"
                    app:tint="#E6C7BB"
                    android:layout_weight="0.1"
                    />

                <TextView
                    android:id="@+id/tvVerseNumber"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:text="Verse 1"
                    android:background="@drawable/bg_shimmer"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_weight="2.8"
                    android:textSize="15.60sp"
                    android:textColor="#E6C7BB"/>

                <ImageView
                    android:id="@+id/ivNext"
                    android:layout_width="26.00dp"
                    android:layout_height="26.00dp"
                    android:background="@drawable/bg_shimmer"
                    android:src="@drawable/baseline_keyboard_double_arrow_right_24"
                    app:tint="#E6C7BB"
                    android:layout_weight="0.1"/>


            </LinearLayout>

            <TextView
                android:id="@+id/tvVerse"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="he first chapter of the Bhagavad Gita - Arjuna Vishada Yoga introduces the setup, the setting,the characters and thfirst chapter of the Bhagavad Gita - Arjuna Vishada Yoga introduces the setup, the setting,the characters and the circumstances that led to the epic battle of "
                android:layout_weight="2"
                android:layout_margin="3.90dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_shimmer"
                android:textSize="14.30sp"
                android:textColor="#E6C7BB"
                />








        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>