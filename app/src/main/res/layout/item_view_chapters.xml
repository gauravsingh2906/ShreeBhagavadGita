<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvItemView"
    android:elevation="2.60dp"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="6.50dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="6.50dp"
            android:background="@drawable/chapter_selector"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.9">

                    <TextView
                        android:id="@+id/tvChapterNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chapter 1"
                        android:textStyle="bold"
                        android:textSize="15.60sp"
                        android:textColor="@color/orange"/>

                    <TextView
                        android:id="@+id/tvChapterTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Arjuna Visada Yoga"
                        android:textStyle="bold"
                        android:textSize="21.60sp"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivFavoriteFilled"
                        android:layout_width="39dp"
                        android:layout_height="39dp"
                        android:src="@drawable/baseline_favorite_24"
                        app:tint="@color/orange"
                        android:hapticFeedbackEnabled="true"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:id="@+id/ivFavorite"
                        android:layout_width="39dp"
                        android:layout_height="39.00dp"
                        android:src="@drawable/baseline_favorite_border_24"

                        android:visibility="visible"
                        android:hapticFeedbackEnabled="true"/>




                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tvChapterDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="The first chapter of the Bhagavad Gita - Arjuna Vishada Yoga introduces the setup, the setting,the characters and the circumstances that led to the epic battle of Mahabharata, fought between the Pandavas and the Kite is flying "
                android:maxLines="4"
                android:textColor="@color/chapterDetail"
                android:layout_marginTop="6.50dp"
                android:textSize="15.60sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9.10dp">

                <ImageView
                    android:layout_width="36.40dp"
                    android:layout_height="36.40dp"
                    android:src="@drawable/baseline_menu_24"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tvVersesCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="47"
                    android:textStyle="bold"
                    android:layout_marginStart="13.00dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/tvVerses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verses"
                    android:textStyle="bold"
                    android:layout_marginStart="3.90dp"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/backgroundImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.10"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/up_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/backgroundImage2"
            android:layout_width="130.00dp"
            android:layout_height="130.00dp"
            android:alpha="0.3"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/up_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/backgroundImage3"
            android:layout_width="130.00dp"
            android:layout_height="52.00dp"
            android:alpha="0.5"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/down_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>