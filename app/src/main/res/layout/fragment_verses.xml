<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.fragments.VersesFragment">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llBhagvatGita"
            android:layout_width="wrap_content"
            android:layout_height="65.00dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="13.00dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="19.50dp"
                android:layout_height="19.50dp"
                android:src="@drawable/kalash" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="2.60dp"
                android:text="Shree Bhagavad Gita"
                android:textColor="@color/orange"
                android:textSize="26.00sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="19.50dp"
                android:layout_height="19.50dp"
                android:src="@drawable/kalash" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvChapterNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Chapter 1"
                android:textColor="@color/orange"
                android:textSize="22.10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivPlay"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/baseline_play_circle_outline_24"
                    app:tint="@color/orange" />


                <ImageView
                    android:id="@+id/ivPause"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    android:src="@drawable/baseline_pause_circle_24"
                    android:visibility="gone"
                    app:tint="@color/orange" />

                <ProgressBar
                    android:id="@+id/Progress"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/baseline_play_circle_outline_24"
                    android:visibility="gone"
                    app:tint="@color/orange" />

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tvChapterNumber1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Chapter 1"
            android:textColor="@color/orange"
            android:textSize="22.10sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.00dp"
            android:gravity="center"
            android:text="Arjuna Visada Yoga"
            android:textColor="@color/black"
            android:textSize="19.20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvChapterDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6.50dp"
            android:layout_marginTop="18.20dp"

            android:maxLines="4"
            android:text="The first chapter of the Bhagavad Gita - Arjuna Vishada Yoga introduces the setup, the setting,the characters and the circumstances that led to the epic battle of Mahabharata, fought between the Pandavas and the Kite is flying "
            android:textColor="@color/orange"
            android:textSize="15.10sp" />

        <TextView
            android:id="@+id/tvSeeMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6.50dp"
            android:text="Read More..."
            android:textColor="#0051F4"
            android:textSize="14.30sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13.00dp"
            android:layout_marginTop="19.50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvNumberOfVerses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="47"
                android:textColor="@color/black"
                android:textSize="19.50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvVerses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6.50dp"
                android:gravity="center"
                android:text="Verses"
                android:textColor="@color/black"
                android:textSize="19.50sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTop">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6.50dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/shimmer_iv_verses" />

                <include layout="@layout/shimmer_iv_verses" />

                <include layout="@layout/shimmer_iv_verses" />

                <include layout="@layout/shimmer_iv_verses" />

                <include layout="@layout/shimmer_iv_verses" />


            </LinearLayout>


        </com.facebook.shimmer.ShimmerFrameLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvVerses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6.50dp"
            android:visibility="visible"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_view_verses" />


    </LinearLayout>

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_marginTop="39.00dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.15"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/krsna"
        app:layout_constraintBottom_toTopOf="@+id/llBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_14sdp"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_arrow_circle_up_24"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/llBottom"
        app:layout_constraintStart_toStartOf="@+id/llBottom"
        app:layout_constraintTop_toBottomOf="@+id/llTop"
        app:tint="@color/black" />


    <TextView
        android:id="@+id/tvShowingMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="2.60dp"
        android:gravity="center"
        android:text="No internet connection! \n Check for saved chapters in settings"
        android:textColor="@color/orange"
        android:textSize="14.30sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/llBottom"
        app:layout_constraintStart_toStartOf="@+id/llBottom"
        app:layout_constraintTop_toBottomOf="@+id/llTop" />


</androidx.constraintlayout.widget.ConstraintLayout>